<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="phonebook">

	<!-- 리스트 -->
	<select id="select" resultType="personVo">
		<![CDATA[
			select person_id personId, name, hp, company
			from person
		]]>
	</select>
	
	<!-- 1명데이터가져오기 selectOne-->
	<select id="selectOne" parameterType="int" resultType="personVo">
		<![CDATA[
		select person_id personId, 
		       name,
		       hp,
		       company
		from person where person_id=#{id}
		]]>
	</select>
	
	<!-- 등록 -->
	<insert id="insert" parameterType="personVo">
		<![CDATA[
			insert into person
			values(null, #{name}, #{hp}, #{company})	
		]]>
	</insert>

	<!-- 수정 -->
	<update id="update">
		<![CDATA[
			update person
			set name = #{name}, hp = #{hp}, company = #{company}
			where person_id = 4
		]]>
	</update>


	<!-- 삭제 -->
	<delete id="delete">
		<![CDATA[
			delete from person
			where person_id = #{personId}
		]]>
	</delete>

</mapper>